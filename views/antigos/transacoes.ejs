                                <small>Dinheiro entrando</small>
                            </label>

                            <input type="radio" id="saida" name="tipo" value="Sa√≠da" class="type-radio">
                            <label for="saida" class="type-label type-saida">
                                <i class="fas fa-arrow-up"></i>
                                <span>Sa√≠da</span>
                                <small>Dinheiro saindo</small>
                            </label>
                        </div>
                    </div>

                    <!-- Valor -->
                    <div class="form-group">
                        <label for="valor" class="form-label">
                            <i class="fas fa-money-bill-wave"></i>
                            Valor
                        </label>
                        <div class="input-container">
                            <input type="number" id="valor" name="valor" class="form-input" 
                                   step="0.01" min="0.01" placeholder="0.00" required>
                            <div class="input-icon">
                                <i class="fas fa-dollar-sign"></i>
                            </div>
                            <span class="currency-symbol">R$</span>
                        </div>
                    </div>

                    <!-- Observa√ß√µes -->
