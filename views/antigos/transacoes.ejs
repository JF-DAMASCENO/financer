                        <label for="observacoes" class="form-label">
                            <i class="fas fa-sticky-note"></i>
                            Observa√ß√µes (Opcional)
                        </label>
                        <div class="input-container">
                            <textarea id="observacoes" name="observacoes" class="form-textarea" 
                                      placeholder="Alguma observa√ß√£o adicional sobre esta transa√ß√£o..." 
                                      rows="3"></textarea>
                            <div class="input-icon">
                                <i class="fas fa-comment"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- A√ß√µes do Formul√°rio -->
                <div class="form-actions">
                    <button type="button" class="btn-secondary" id="btnLimpar">
                        <i class="fas fa-eraser"></i>
                        Limpar Campos
                    </button>
                    <button type="submit" class="btn-primary">
                        <i class="fas fa-check-circle"></i>
                        Adicionar Transa√ß√£o
                    </button>
                </div>
            </form>
        </div>

        <!-- Preview em Tempo Real -->
        <div class="preview-card">
            <div class="preview-header">
                <h3><i class="fas fa-eye"></i> Pr√©-visualiza√ß√£o</h3>
                <p>Visualize como sua transa√ß√£o ficar√°</p>
            </div>
            <div class="preview-content">
                <div class="preview-item">
                    <span class="preview-label">Data:</span>
                    <span class="preview-value" id="previewData">--/--/----</span>
                </div>
                <div class="preview-item">
                    <span class="preview-label">Descri√ß√£o:</span>
                    <span class="preview-value" id="previewDescricao">---</span>
                </div>
                <div class="preview-item">
                    <span class="preview-label">Categoria:</span>
                    <span class="preview-value" id="previewCategoria">---</span>
                </div>
                <div class="preview-item">
                    <span class="preview-label">Tipo:</span>
                    <span class="preview-value" id="previewTipo">---</span>
                </div>
                <div class="preview-item">
                    <span class="preview-label">Valor:</span>
                    <span class="preview-value" id="previewValor">R$ 0,00</span>
                </div>
            </div>
        </div>

        <!-- Transa√ß√µes Recentes -->
        <div class="recent-transactions">
            <div class="section-header">
                <h3><i class="fas fa-clock"></i> Transa√ß√µes Recentes</h3>
                <a href="/historico" class="view-all-link">
                    Ver todas
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            
            <% if (transacoes && transacoes.length > 0) { %>
                <div class="transactions-list">
                    <% transacoes.slice(-3).reverse().forEach(function(transacao) { %>
                        <div class="transaction-item">
                            <div class="transaction-icon">
                                <i class="fas <%= transacao.tipo === 'Entrada' ? 'fa-arrow-down text-success' : 'fa-arrow-up text-danger' %>"></i>
                            </div>
                            <div class="transaction-info">
                                <div class="transaction-desc"><%= transacao.descricao %></div>
                                <div class="transaction-meta">
                                    <span class="transaction-category"><%= transacao.categoria %></span>
                                    <span class="transaction-date"><%= transacao.data %></span>
                                </div>
                            </div>
                            <div class="transaction-amount <%= transacao.tipo === 'Entrada' ? 'text-success' : 'text-danger' %>">
                                R$ <%= transacao.valor.toFixed(2) %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="empty-state">
